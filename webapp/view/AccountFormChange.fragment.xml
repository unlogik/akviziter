								<core:Icon src="sap-icon://unpaid-leave" size="80%" visible="{SoldTo/FlgDebtor}" tooltip="{/#Partner/SoldTo/FlgDebtor/@sap:label}" color="red"/>
								<core:Icon src="sap-icon://locked" size="80%" visible="{SoldTo/FlgBlocked}" tooltip="{/#Partner/SoldTo/FlgBlocked/@sap:label}" color="red"/>
								<core:Icon src="sap-icon://official-service" size="80%" visible="{SoldTo/FlgSued}" tooltip="{/#Partner/SoldTo/FlgSued/@sap:label}" color="red"/>
