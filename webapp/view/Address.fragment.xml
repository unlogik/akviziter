<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:f="sap.ui.layout.form">
	<ResponsivePopover showHeader="false" contentWidth="500px" contentHeight="260px" placement="Bottom">
		<content>
			<Table id="_tableAddress" items="{SoldToAddress}" inset="false" mode="SingleSelect">
				<columns>
					<Column minScreenWidth="Tablet" demandPopin="true">
						<Text text="Name"/>
					</Column>
					<Column minScreenWidth="Tablet" demandPopin="true">
						<Text text="Address"/>
					</Column>
				</columns>
				<items>
					<ColumnListItem  press="onAddressSelect">
						<cells>
							<ObjectIdentifier title="{Name1} {Name2}" text="{Partnerid}"/>
							<ObjectIdentifier title="{Stras} {Hsnm1}{Hsnm2}" text="{Pstlz} {Ort01}"/>
						</cells>
					</ColumnListItem>
				</items>
			</Table>
		</content>
		<beginButton>
		    <Button icon="sap-icon://decline" visible="{view>/AccountDetails/editable}" press="onAddressClose"/>
		</beginButton>		
		<endButton>
			<Button icon="sap-icon://accept" visible="{view>/AccountDetails/editable}" press="onAddressSelect" tooltip="Select Adddress"/>
		</endButton>
	</ResponsivePopover>
</core:FragmentDefinition>