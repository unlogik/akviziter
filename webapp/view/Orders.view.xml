<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" xmlns:html="http://www.w3.org/1999/xhtml" xmlns:smartTable="sap.ui.comp.smarttable" controllerName="bp.controller.Orders">
	<Page title="{i18n>titleOrders}" showNavButton="true" navButtonPress="onNavBack">
		<content>
			<Table id="table" width="auto" class="sapUiResponsiveMargin" items="{      path: '/Accounts',      sorter: {       path: 'Partner',       descending: false      }     }" noDataText="{worklistView>/tableNoDataText}" busyIndicatorDelay="{worklistView>/tableBusyDelay}" growing="true" growingScrollToLoad="true" updateFinished="onUpdateFinished">
				<columns>
					<Column id="__column0">
					    <header>
					        <Label text="{/#Account/Partner/@sap:label}" id="__label2"/>
					    </header>
					</Column>
					<Column id="__column1">
					    <header>
					        <Label text="{/#Account/Street/@sap:label}" id="__label3"/>
					    </header>
					</Column>
					<Column id="__column2">
					    <header>
					        <Label text="{/#Account/LastName/@sap:label}" id="__label4"/>
					    </header>
					</Column>
					<Column id="__column3">
					    <header>
					        <Label text="{/#Account/City/@sap:label}" id="__label5"/>
					    </header>
					</Column>
				</columns>

				<items>
					<ColumnListItem type="Navigation" press="onPress">
						<cells>
								<Input value="{Partner}" width="100%" id="__input0"/>
								<Input value="{Street}" width="100%" id="__input1"/>
								<Input value="{LastName}" width="100%" id="__input2"/>
								<Input value="{City}" width="100%" id="__input3"/>
						</cells>
					</ColumnListItem>
				</items>
			</Table>
		</content>
	</Page>
</mvc:View>